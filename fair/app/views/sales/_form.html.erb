
<div class="row">
   <div class="col-sm-6">
    <%= form_for(@sale) do |f| %>
      <% if @sale.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

          <ul>
          <% @sale.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

       <div class="field form-group col-sm-6">
        <%= f.label :data_ini, html: {class:'col-sm-2 control-label'}%><br>
        <%= f.date_field :data_ini, :required => true %>
      </div>
      <div class="field form-group col-sm-6">
        <%= f.label :data_fim, html: {class:'col-sm-2 control-label'} %><br>
        <%= f.date_field :data_fim %>
      </div>
      <div class="field form-group col-sm-6">
        <%= f.label :status, html: {class:'col-sm-2 control-label'} %><br>
        <%= f.select :status, ['','Planejada', 'Aberta', 'Aguard. Pagamento', 'Aguard. Pg. Forn.', 'Encerrada'] %>
      </div>

      <div class="field form-group col-sm-12">
        <%= f.label :coments, html: {class:'col-sm-2 control-label'} %><br>
        <%= f.text_area :coments %>
      </div>

      <div class="actions form-group col-sm-12">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>